<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "photo-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :slug %>
  <%= text_input f, :slug %>
  <%= error_tag f, :slug %>

  <%= label f, :caption %>
  <%= text_input f, :caption %>
  <%= error_tag f, :caption %>

  <%= label f, :path %>
  <%= text_input f, :path %>
  <%= error_tag f, :path %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
